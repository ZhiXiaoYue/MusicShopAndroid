<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/phone_num"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:hint="请输入手机号"
            android:paddingLeft="5dp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/phone_password"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_below="@+id/phone_num"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:singleLine="true" />
        <EditText
            android:id="@+id/phone_message"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/phone_password"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:paddingLeft="5dp"
            android:singleLine="true" />
        <Button
            android:id="@+id/sms_btn"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@+id/phone_password"
            android:layout_toRightOf="@+id/phone_message"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="验证码"
            android:textSize="16sp" />

        <Button
            android:id="@+id/sms_register_btn"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@+id/phone_message"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="注册"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>